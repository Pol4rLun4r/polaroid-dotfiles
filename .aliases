# my shortcuts
alias c='clear'
alias update='sudo apt update && sudo apt upgrade -y'
alias dots='cd ~/polaroid-dotfiles'
alias desktop='cd ~/Desktop'

# ícones
alias fix-icons='~/polaroid-dotfiles/icons/main.sh'
alias change-icon='~/polaroid-dotfiles/icons/change-icon/main.sh'

# script principal
alias install-all='~/polaroid-dotfiles/install-all.sh' #instala os scripts
alias install-all-y='~/polaroid-dotfiles/install-all.sh -y' #instala os scripts mas com a flag -y

# scripts extras
alias install-program-ext='~/polaroid-dotfiles/gnome/install-programs.sh' #instala gnome-tweaks e manager-extensions
alias install-fastfetch='~/polaroid-dotfiles/others/install-fastfetch.sh' #instala o fastfetch
alias alternative-terminal='~/polaroid-dotfiles/others/set-gnome-console.sh' #instala outro console alternativo (principalmente para erros de layout de teclado)
alias install-nerdfont='~/polaroid-dotfiles/others/install-nerdfont.sh' #instala uma nerd font compatível com os ícones do powerlevel10k 
alias default-terminal='~/polaroid-dotfiles/others/set-gnome-terminal.sh' #retorna ao terminal padrão do gnome
alias restore-custom-folders='~/polaroid-dotfiles/others/custom-folders/restore-custom-folders.sh' # restaura o icone das pastas customizadas
alias backup-custom-folders='~/polaroid-dotfiles/others/custom-folders/backup-custom-folders.sh' # faz backup do icone das pastas customizadas